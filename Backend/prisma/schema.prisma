generator client {
  provider = "prisma-client-js"
 // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  address      String        @unique
  mintedTokens MintedToken[] 
  status       Status        @default(Good)
  lastprocessedblock BigInt   @default(0)
}

enum Status {
  Good 
  Bad 
}

model MintedToken {
  id         Int    @id @default(autoincrement())
  user       User   @relation(fields: [userId], references: [id])
  userId     Int 
  tokenAddress String  
  symbol     String
  amount     BigInt
  boughtAt   BigInt @default(0) 
}
